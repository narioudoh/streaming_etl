# Real-time ETL Pipeline Environment Configuration
# Copy this file to .env and modify as needed

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPICS=user-events,metrics

# Database Configuration
DATA_PATH =ch_data:/var/lib/clickhouse/ 
LOG_PATH =ch_logs:/var/log/clickhouse-server/

# ETL Service Configuration
ETL_SERVICE_PORT=8000
ETL_BATCH_SIZE=100
ETL_PROCESSING_INTERVAL=1

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_REFRESH_INTERVAL=10

# Data Generation Configuration
DATA_GENERATION_INTERVAL=5
DATA_GENERATION_BATCH_SIZE=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s



